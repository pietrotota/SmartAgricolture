<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tota_tagliente_riccardi.it.smartagricolture.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indirizzo Middleware:"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:text="http://"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/txtIndirizzo"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Connetti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIndirizzo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="23dp"
        android:id="@+id/btnConnect" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txtLog"
        android:textSize="24sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/btnConnect"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLog"
        android:layout_marginEnd="25dp"
        android:id="@+id/delaySecond"
        android:layout_alignTop="@+id/btnConnect"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="delay in sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/txtLog"
        android:layout_toEndOf="@+id/delaySecond"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/delaySecond"
        android:gravity="center_vertical"
        android:textSize="18sp" />

</RelativeLayout>
